{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true, // Ensures consistent file name casing across OSes
    "strict": true // Enables all strict type-checking options
  },
  "include": ["src"]
}
